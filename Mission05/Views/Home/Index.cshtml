@* create a downloadable pdf of my resume *@
<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div style="margin-top: 10px;">
                <a href="~/media/josh_burton_resume_20241003.pdf" download="Josh_Burton_Resume.pdf" class="btn btn-primary">Download Resume</a>
            </div>
        </div>
    </div>
</div>

