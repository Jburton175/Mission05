    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>@ViewData["Title"]</h1>
            <p>My name is Josh Burton</p>
            <img src="~/media/josh_headshot.jpg" alt="Josh Burton Headshot" class="img-fluid" style="max-width: 50%; height: auto;" />
