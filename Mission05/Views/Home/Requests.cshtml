@{
    ViewData["Title"] = "Requests";
}
<br />
<h1>@ViewData["Title"]</h1>

<link rel="stylesheet" href="~/css/FormStyles.css" asp-append-version="true" />

<br /><br /><br />
<div class="container">
    <h2>Request Swimming Lessons</h2>

    <label for="hours">Enter Hours Needed:</label>
    <input type="number" id="hours" placeholder="Enter hours" min="1">

    <label for="rate">$Hourly Rate:</label>
    <input type="text" id="rate" value="50" readonly>

    <button type="submit" id="calculateTotal" >Calculate Total</button>

    <div class="output">Total Cost: <span id="total">$0.00</span></div>
</div>